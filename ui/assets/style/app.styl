.page-enter-active {
  transition: all 225ms cubic-bezier(0.0, 0.0, 0.2, 1);
}
.page-leave-active {
  transition: all 375ms cubic-bezier(0.4, 0.0, 1, 1);
}
.page-enter {
  transform: translateY(50px);
  opacity: 0;
}
.page-leave-to {
  filter: blur(5px);
  opacity: 0;
}
